load("//bazel:hephaestus.bzl", "heph_cc_binary", "heph_cc_library", "heph_cc_test")

package(default_visibility = ["//visibility:public"])

heph_cc_library(
    name = "bag",
    srcs = glob([
        "src/**/*.cpp",
    ]),
    hdrs = glob([
        "include/**/*.h",
    ]),
    includes = ["include"],
    visibility = ["//visibility:public"],
    deps = [
        "//modules/containers",
        "//modules/ipc",
        "//modules/random",
        "@abseil-cpp//absl/log:check",
        "@abseil-cpp//absl/log:log",
        "@mcap_lib",
    ],
)

############
# Binaries #
############

heph_cc_binary(
    name = "bag_player",
