    deps = [
        ":bag",
    ],
)

heph_cc_binary(
    name = "bag_recorder",
    srcs = ["apps/bag_recorder.cpp"],
    deps = [
        ":bag",
    ],
)

heph_cc_binary(
    name = "bag_example",
    srcs = ["examples/example.cpp"],
    deps = [
        ":bag",
    ],
)

#########
# Tests #
#########

BAG_TEST_DEPS = [
    ":bag",
]

PROTO_PATH = "/modules/bag/tests"

cc_proto_library(
    name = "test_cc_proto",
    visibility = ["//visibility:public"],
    deps = [":test"],
)

proto_library(
    name = "test",
    srcs = ["tests/test.proto"],
    strip_import_prefix = PROTO_PATH,
)

heph_cc_test(
    name = "tests",
    srcs = ["tests/tests.cpp" + "tests/test_proto_conversion.h"],
    deps = BAG_TEST_DEPS + [":test_cc_proto"],
)
