# Config file for the @INSTALL_MODULE_NAME@ package
# Defines the following variables
#  <package>_INCLUDE_DIR - directory containing headers
#  <package>_LIB_DIR     - directory containing libs
#  <package>_LIBS         - libraries to link against

# Note: This file is autogenerated from template by macro install_module_targets()
# which sets the following variables
# INSTALL_MODULE_NAME
# INSTALL_MODULE_LIB_TARGETS
# INSTALL_MODULE_INTERNAL_DEPENDENCIES
# INSTALL_MODULE_EXTERNAL_DEPENDENCIES

# check CMAKE_CXX_STANDARD is set and new enough to support features we need
if(NOT ("${CMAKE_CXX_STANDARD}" AND ("${CMAKE_CXX_STANDARD}" GREATER_EQUAL "@CMAKE_CXX_STANDARD@")))
    message(FATAL_ERROR "@CMAKE_PROJECT_NAME@ requires at least C++@CMAKE_CXX_STANDARD@. \
    Please set(CMAKE_CXX_STANDARD @CMAKE_CXX_STANDARD@) or better")
endif()

@PACKAGE_INIT@

# Set paths to our package.
set(@INSTALL_MODULE_NAME@_INCLUDE_DIR "@PACKAGE_CMAKE_INSTALL_FULL_INCLUDEDIR@")
set(@INSTALL_MODULE_NAME@_LIB_DIR "@PACKAGE_CMAKE_INSTALL_FULL_LIBDIR@")
set(@INSTALL_MODULE_NAME@_LIBS @INSTALL_MODULE_LIB_TARGETS@)

# Find external packages we depend on
include(CMakeFindDependencyMacro)
set(PACKAGE_EXTERNAL_DEPENDENCIES "@INSTALL_MODULE_EXTERNAL_DEPENDENCIES@")
foreach(exdep ${PACKAGE_EXTERNAL_DEPENDENCIES})
    find_dependency(${exdep})
endforeach()

# Find internal packages we depend on - do this last as it will overwrite cmake autogenerated
# internal variables we use in this package (eg: PACKAGE_PREFIX_DIR)
set(PACKAGE_INTERNAL_DEPENDENCIES "@INSTALL_MODULE_INTERNAL_DEPENDENCIES@")
if(PACKAGE_INTERNAL_DEPENDENCIES)
  find_package(@PROJECT_NAME@ @VERSION@ REQUIRED COMPONENTS ${PACKAGE_INTERNAL_DEPENDENCIES})
endif()

# import targets and reference dependencies
include(${CMAKE_CURRENT_LIST_DIR}/@INSTALL_MODULE_NAME@-targets.cmake)
