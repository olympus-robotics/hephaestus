{
  "remoteUser": "hephaestus",
  "workspaceFolder": "/workspaces/hephaestus",
  "settings": {
    "files.associations": {
      // Add all the default file2language associations
      // "*.xacro": "xml"
    },
    "[cmake]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "cheshirekow.cmake-format"
    },
    "[dockerfile]": {
      // TODO: @weber setup dockerfile formatting on save
      "editor.formatOnSave": false,
      "docker.languageserver.formatter.ignoreMultilineInstructions": true,
      "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[shellscript]": {
      "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[json]": {
      "editor.defaultFormatter": "vscode.json-language-features",
      "editor.tabSize": 2
    },
    "[jsonc]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonl]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json5]": {
      "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[yaml]": {
      "compactSequenceIndent": false,
      "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[c]": {
      "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "[cpp]": {
      "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "[python]": {
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
      },
      "editor.tabSize": 4
    },
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "json.format.enable": true,
    "json.format.keepLines": true,
    "yaml.format.enable": true,
    "html.format.enable": true,
    "css.format.enable": true,
    "less.format.enable": true,
    "scss.format.enable": true,
    "javascript.format.enable": true,
    "typescript.format.enable": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "bash",
        "icon": "terminal-bash"
      },
      "zsh": {
        "path": "zsh"
      },
      "fish": {
        "path": "fish"
      },
      "tmux": {
        "path": "tmux",
        "icon": "terminal-tmux"
      },
      "pwsh": {
        "path": "pwsh",
        "icon": "terminal-powershell"
      }
    }
  },
  "extensions": [
    // language support
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools", // cmake syntax support
    "zxh404.vscode-proto3", // protobuf support and linting
    "ms-azuretools.vscode-docker", // dockerfile and linting support
    // formatters
    "llvm-vs-code-extensions.vscode-clangd", // linting, code-formatting
    "cheshirekow.cmake-format", // cmake formatting
    "foxundermoon.shell-format", // shell script formatting
    "redhat.vscode-yaml", // yaml syntax highlighting and formatting
    "streetsidesoftware.code-spell-checker",
    "charliermarsh.ruff", // fast python formatting
    "bazelbuild.vscode-bazel",
  ],
}
